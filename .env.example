# ===========================================
# DATABASE (Supabase PostgreSQL)
# ===========================================
# Get this from Supabase Dashboard > Project Settings > Database > Connection string
# Use the "URI" format, e.g.: postgresql://postgres.[project-ref]:[password]@aws-0-us-east-1.pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres:your_password@your_supabase_host:6543/postgres

# ===========================================
# FIREBASE AUTHENTICATION
# ===========================================
# Get these from Firebase Console > Project Settings > General > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id

# ===========================================
# ADMIN ACCESS
# ===========================================
# Comma-separated list of email addresses that have admin access
NEXT_PUBLIC_ADMIN_EMAILS=admin@example.com,another@example.com

# ===========================================
# STRIPE PAYMENTS
# ===========================================
# Get these from Stripe Dashboard > Developers > API keys
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Price IDs from Stripe Dashboard > Products > Your product > Prices
STRIPE_PRICE_ID_WEEKLY=price_xxxxx
STRIPE_PRICE_ID_MONTHLY=price_xxxxx
STRIPE_PRICE_ID_YEARLY=price_xxxxx

# Webhook secrets from Stripe Dashboard > Developers > Webhooks
# Production webhook secret (for your live domain)
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
# Staging webhook secret (for localhost/development)
STRIPE_WEBHOOK_SECRET_STAGING=whsec_xxxxx

# ===========================================
# AWS S3 STORAGE
# ===========================================
# Get these from AWS IAM > Users > Security credentials
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-bucket-name

# ===========================================
# AI / OPENAI
# ===========================================
# For AI receipt analysis feature
AI_INTEGRATIONS_OPENAI_API_KEY=sk-your_openai_api_key
AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1

# ===========================================
# EMAIL (RESEND)
# ===========================================
# Get from Resend Dashboard > API Keys
RESEND_API_KEY=re_xxxxx
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# EMAIL CAMPAIGN CRON
# ===========================================
# Secret for authenticating GitHub Actions cron job (generate with: openssl rand -hex 32)
CRON_SECRET=generate_a_secure_random_string
# Secret for HMAC-signing unsubscribe links (generate with: openssl rand -hex 32)
UNSUBSCRIBE_SECRET=generate_a_secure_random_string
# Your production URL (used for unsubscribe links in emails)
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# ===========================================
# WEBHOOKS
# ===========================================
# Secret token for authenticating incoming blog webhooks
WEBHOOK_ACCESS_TOKEN=generate_a_secure_random_string

# ===========================================
# OPTIONAL / LEGACY
# ===========================================
# Only needed if you were using Replit Object Storage (can be removed)
# PUBLIC_OBJECT_SEARCH_PATHS=
